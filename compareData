#!/bin/bash

file1="/path/to/file1" # путь к файлу 1
file2="/path/to/file2" # путь к файлу 2

date1=$(stat -c%Y $file1) # получаем дату последней модификации файла 1 в секундах с начала эпохи
date2=$(stat -c%Y $file2) # получаем дату последней модификации файла 2 в секундах с начала эпохи

if [ $date1 -gt $date2 ]; then
  echo "Дата последней модификации файла 1 ($file1) позже даты последней модификации файла 2 ($file2)"
elif [ $date1 -lt $date2 ]; then
  echo "Дата последней модификации файла 2 ($file2) позже даты последней модификации файла 1 ($file1)"
else
  echo "Дата последней модификации файлов 1 ($file1) и 2 ($file2) одинакова"
fi
